<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="14dp"
                android:id="@+id/viewhistory_imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="78dp"
                android:layout_height="88dp"/>
            <View
                android:id="@+id/viewhistory_viewline"
                android:layout_marginLeft="14dp"
                app:layout_constraintLeft_toRightOf="@id/viewhistory_imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="1dp"
                android:layout_height="116dp"/>
<!--                android:background="@color/gray1" />-->
            <TextView
                android:id="@+id/viewhistory_penyakit_textview"
                app:layout_constraintStart_toEndOf="@id/viewhistory_viewline"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Room 1"/>
            <TextView
                android:id="@+id/viewhistory_date_textview"
                app:layout_constraintStart_toEndOf="@id/viewhistory_viewline"
                app:layout_constraintTop_toBottomOf="@id/viewhistory_penyakit_textview"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>